generator client {
  provider        = "prisma-client-js"
}

datasource db {
  provider        = "mysql"
  url             = env("DATABASE_URL")
}

/// 管理后台用户表
model AdminUser {
  id         BigInt   @id
  name       String   @unique
  password   String
  isDel      Boolean  @default(false) @map(name: "is_del")
  createTime DateTime @default(now()) @map(name: "create_time")
  updateTime DateTime @updatedAt @map(name: "update_time")

  @@map(name: "admin_user")
}
